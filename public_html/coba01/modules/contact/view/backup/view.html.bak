   <html>
<head>
  <title>FastPlaz - Generated Templates</title>
  <link rel="stylesheet" id="fastplaz-style-css"  href="[$themefullpath]/style/style.css" type="text/css" media="all" />
</head>
<body>

    <form method='post'>
    <input type='hidden' name='id' value ="[$id]">
       Name :<input type='Text' name='name' value ="[$name]" ><br>
       Address :<input type='Text' name='address' value ="[$address]"><br>
        <input type ="submit" value="Simpan">
       </form>

     <table>
<tr>
      <td>Name</td>
      <td>Address</td>
      <td>Action</td>


     </tr>
    [foreach from=$contacts type=table item=row]
     <tr>
      <td>[row.name]</td>
      <td>[row.address]</td>
      <td><a href="?id=[row.id]&action=Edit">Edit</a>
      <a href="?id=[row.id]&action=Delete">Delete</a>
      </td>

     </tr>
    [/foreach from=$contacts]
     </table>
     </body>
